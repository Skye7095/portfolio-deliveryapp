<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portfolio.delivery.store.dao.StoreDAO">
	<!-- store 회원가입 -->
	<insert id="insertStore" parameterType="map">
		INSERT INTO
			`store`
		(
			`businessNumber`
			, `password`
			, `ownerName`
			, `ownerPhone`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{businessNumber}
			, #{password}
			, #{ownerName}
			, #{ownerPhone}
			, now()
			, now()
		)
	</insert>
	
	<!-- businessNumber 중복여부 -->
	<select id="selectSameStore" parameterType="string" resultType="int">
		SELECT
			count(1)
		FROM
			`store`
		WHERE
			`businessNumber` = #{businessNumber}
	</select>
	
	<!-- 로그인 -->
	<select id="selectStore" parameterType="map" resultType="com.portfolio.delivery.store.model.Store">
		SELECT
			`id`
			, `businessNumber`
			, `password`
			, `ownerName`
			, `ownerPhone`
			, `createdAt`
			, `updatedAt`
		FROM
			`store`
		WHERE
			`businessNumber` = #{businessNumber} AND `password` = #{password}
	</select>
</mapper>